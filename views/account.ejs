    <link rel="stylesheet" href="./style.css">
    <title>Account</title>
    <style>
        input[type=password] {
            height: 25px;
            border: 3px red;
            border-radius: 10px;
        }
        
        input[type=submit] {
            font-size: 25px;
            border-radius: 10px;
            color: rgb(75, 77, 27);
            background-color: rgb(190, 190, 240);
        }
        
        input[type=submit]:hover {
            background-color: rgb(235, 178, 178);
            color: red;
        }
        
        label {
            font-size: 25px;
            color: rgb(75, 27, 27);
        }
    </style>
</head>

<body>
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/login">Login</a>
        <a href="/register">Register</a>
        <a href="/songs">Songs</a>
        <a href="/view-basket">View Basket</a>
        <a class="active" href="/account">Account</a>
        <a href="/logout">Logout</a>


    </div>
    <div>
        <h3>Hello
            <%=user%>,<br>Your account was created on
                <%=date%><br><br>

                    <div class="container">
                        <h1>Change password</h1><br>
                        <form action="/account" method="POST">
                            <label for="oldPassword">Old Password</label><br>
                            <input type="password" id="oldPassword" name="oldPassword" size="75"><br>
                            <label for="newPassword1">New Password</label><br>
                            <input type="password" id="newPassword1" name="newPassword1" size="75"><br>
                            <label for="newPassword2">Re-enter New Password</label><br>
                            <input type="password" id="newPassword2" name="newPassword2" size="75"><br><br>
                            <input type="submit" action="Submit" value="Change Password">
                        </form>
                    </div>
        </h3>
    </div>

</body>

</html>